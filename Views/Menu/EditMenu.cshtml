@model webapp_asp.Models.Menu
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Add Menu Page";
    var id = @Context.Session.GetString("id");
}
<style>
    div{
       font-family: 배달의민족 한나체 Pro; 
    }
</style>

@if(id == "admin")
{
   <div class="text-center">
    <h1 class="display-4">Online Chicken Delivery Edit Menu Page </h1><br>
    <h4>메뉴 정보 수정</h4> <br>
    <form asp-controller="Menu" asp-action="EditMenu">
        <input type="hidden" asp-for="number" />
       <p>메뉴 이름: <input type="text" name="name" value="@Html.DisplayFor(model => model.name)" /> </p>
       <p>메뉴 수량: <input type="text" name="amount" value="@Html.DisplayFor(model => model.amount)" /> </p>
       <p>가격: <input type="text" name="price" value="@Html.DisplayFor(model => model.price)" /> </p>
      <input type="submit" class="btn btn-primary" value="메뉴 수정" />
    </form><br>
    <br>
    <input type="button" class="btn btn-primary" value="뒤로가기" onclick="history.go(-1);" />
</div>
}
else 
{
    <div class="text-center">
    <h1 class="display-4">Online Chicken Delivery Admin Site </h1><br>
    <br>
    <h3>관리자 모드는 관리자 전용임. </h3>b<br>
    <br>
    <br>
    <p><input type="button" value="로그인" class="btn btn-primary" onclick="location.href='/Home/Index'" />
    <input type="button" value="뒤로가기" class="btn btn-primary" onclick='history.go(-1);' /></p>
</div>
}

