@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Welcome to Main Page";
    var id = @Context.Session.GetString("id");
}
<style>
    div{
       font-family: 배달의민족 한나체 Pro; 
    }
</style>

@if(id != null)
{
   <div class="text-center">
    <h1 class="display-4">Online Chicken Delivery Main Site </h1> <br>
    <h3>환영합니다!</h3>
    <br>
    <h5>로그인 성공</h5>
    <h5>접속자 아이디: @id</h5>
    <br>
    <br>
    <br>
    <p><input type="button" class="btn btn-primary" value="로그아웃" onclick='location.href="/Home/Logout"' /></p>
    </div>
}
else 
{
    <div class="text-center">
    <h1 class="display-4">Online Chicken Delivery Main Site </h1>
    <h3>환영합니다!</h3>
    <br>
    <form asp-controller="Home" asp-action="Login" method="POST">
      <p> ID: <input type="text" name="ID" /></p>
      <p> Password: <input type="password" name="Password" /></p>
      <br>
      <br>
      <br>
      <p><input type="submit" value="로그인" class="btn btn-primary" />
      <input type="button" value="회원가입" class="btn btn-primary" onclick='location.href="/Home/SignupPage"' /></p>
    </form>
</div>
}

